{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom"],
		"experimentalDecorators": true
	},
	"include": ["**/*.ts", "**/*.d.ts", "**/*.vue"]
}
