{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"lib": ["esnext", "dom"]
	},
	"include": ["**/*.ts", "**/*.d.ts", "components.d.ts", "**/*.vue", "eslint.config.js"]
}
